{
    "title": "Amazon SNS",
    "description": "Component to work with Amazon SNS",
    "credentials": {
        "fields": {
            "accessKeyId": {
                "label": "Access Key Id",
                "required": true,
                "viewClass": "TextFieldView"
            },
            "accessKeySecret": {
                "label": "Secret Access Key",
                "required": true,
                "viewClass": "TextFieldView"
            }
        }
    },
    "actions": {
        "publish": {
            "main": "./lib/actions/publish.js",
            "title": "Publish",
            "fields": {
                "topicArn": {
                    "label": "TopicArn",
                    "required": true,
                    "viewClass": "TextFieldView",
                    "placeholder" : "arn:aws:sns:eu-west-1:123456789:mysnsrocks"
                },
                "region": {
                    "label": "AWS Region",
                    "required": true,
                    "viewClass": "SelectView",
                    "prompt": "Please choose",
                    "model": {
                        "1000": "1000"
                    }
                }
            },
            "metadata": {
                "in": "./lib/schemas/publish.in.json",
                "out": "./lib/schemas/publish.out.json"
            }
        }
    }
}
